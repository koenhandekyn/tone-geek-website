javascript:
  function init_map() {
      var myOptions = {
          scrollwheel: false,
          zoom: 6,
          center: new google.maps.LatLng(51.0903995, 3.8249049)
      };
      map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions);
      marker = new google.maps.Marker({
          map: map,
          position: new google.maps.LatLng(51.0903995, 3.8249049)
      });
      infowindow = new google.maps.InfoWindow({
          content: "<b>Tone-Geek</b> Belgium HQ"
      });
      google.maps.event.addListener(marker, "click", function() {
          map.setOptions({ zoom: 15, center: new google.maps.LatLng(51.0903995, 3.8249049)});
          infowindow.open(map, marker);
      });
  }
  google.maps.event.addDomListener(window, 'load', init_map);


